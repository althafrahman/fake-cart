<%- include('../partials/head.ejs') %>

    <div class="container">
        <div class="row mt-3">
            <div class="col-md-6">
                <h3>Products</h3>
            </div>
            <div class="col-md-6" style="text-align: right;">
                <a class="btn btn-success text-right" href="/product/create">Add +</a>
            </div>
        </div>
        <div class="row mt-3">
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Sl no</th>
                        <th scope="col">Title</th>
                        <th scope="col">Description</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% if(products.length){products.forEach((product, i)=> { %>
                        <tr>
                            <th scope="row">
                                <%= i+1 %>
                            </th>
                            <td>
                                <%= product.title %>
                            </td>
                            <td>
                                <%= product.description %>
                            </td>
                            <td>
                                <a class="btn btn-default" href="/product/view/<%= product.id %>"><i
                                        class="fa fa-eye"></i></a>
                                <a class="btn btn-default" href="/product/edit/<%= product.id %>"><i
                                        class="fa fa-pencil"></i></a>
                                <button class="btn btn-default deleteBtn" data-href="/product/delete/<%= product.id %>"><i
                                        class="fa fa-trash"></i></button>
                            </td>
                        </tr>
                        <% })} %>

                </tbody>
            </table>


        </div>
    </div>

    <%- include('../partials/footer.ejs') %>