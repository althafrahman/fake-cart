<%- include('../../partials/head.ejs') %>

    <div class="container">
        <div class="row mt-3">
            <div class="col-md-6">
                <h3>Cart</h3>
            </div>
            <div class="col-md-6" style="text-align: right;">
            </div>
        </div>
        <div class="row mt-3">
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Sl no</th>
                        <th scope="col">Item</th>
                        <th scope="col">Quantity</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% if(cartItems.length){cartItems.forEach((item, i)=> { %>
                        <tr>
                            <td scope="row">
                                <%= i+1 %>
                            </td>
                            <td>
                                <%= item.item_id %>
                            </td>
                            <td>
                                <%= item.quantity %>
                            </td>
                            <td>
                                <button class="btn btn-default deleteBtn" data-href="/cart/delete/<%= item.id %>"><i class="fa fa-trash"></i></button>
                            </td>
                        </tr>
                        <% })} %>

                </tbody>
            </table>


        </div>
    </div>

    <%- include('../../partials/footer.ejs') %>